<Segment name="DRT" comment="To identify the deprescribed rate and type">
  <Field name="LoadEmptyStatusCode" required="y" min="1" max="1" validation="T322" comment="Code which specifies the loaded condition of transportation equipment"/>
  <Field name="BilledRatedAsQualifier" required="y" min="2" max="2" validation="T221" comment="Code identifying the type of quantity or value on which the rate or item pricing is based"/>
  <Field name="MonetaryAmount" type="double" required="y" min="1" max="18" comment="Monetary amount"/>
  <Field name="Percent" type="double" required="y" min="1" max="10" comment="Percentage expressed as a decimal"/>
  <Field name="ChangeTypeCode" required="y" min="1" max="1" validation="T259" comment="Code indicating change type"/>
  <Field name="YesNoConditionOrResponseCode" required="y" min="1" max="1" validation="T1073" comment="Code indicating a Yes or No condition or response"/>
</Segment>
