<Segment name="GRP" comment="To report group-specific variables on dosages">
  <Field name="Number" type="long" min="1" max="9" comment="A generic number"/>
  <Field name="UnitDoseCode" min="1" max="1" validation="T1370" comment="Code indicating the type of unit dose dispensing done"/>
  <Field name="Date1" min="8" max="8" comment="Date expressed as CCYYMMDD where CC represents the first two digits of the calendar year"/>
  <Field name="Date2" min="8" max="8" comment="Date expressed as CCYYMMDD where CC represents the first two digits of the calendar year"/>
</Segment>
