<Segment name="DLV" comment="To identify the product to be delivered or the service to be performed">
  <Field name="QuantityOrdered" type="double" min="1" max="15" comment="Quantity ordered"/>
  <Field name="ProductServiceIdQualifier" required="y" min="2" max="2" validation="T235" comment="Code identifying the type/source of the descriptive number used in Product/Service ID (234)"/>
  <Field name="ProductServiceId" required="y" min="1" max="48" comment="Identifying number for a product or service"/>
  <Field name="ProgramTypeCode" required="y" min="2" max="2" validation="T1193" comment="Codes identifying a program type"/>
  <Field name="Description" required="y" min="1" max="80" comment="A free-form description to clarify the related data elements and their content"/>
</Segment>
